package mypack;

import java.util.Arrays;
import java.util.Scanner;

public class Test {

	public static void main(String[] args) {

		int[][] a1 = new int[3][];
		a1[0] = new int[2];
		a1[1] = new int[] { 3, 4, 5 };
		a1[2] = new int[] { 6, 7, 8 };
		System.out.println(Arrays.deepToString(a1));
		a1[0][0] = 1;
		a1[0][1] = 2;
		System.out.println(Arrays.deepToString(a1));
		
		System.out.println("첫번째 행의 길이 : " + a1[0].length);
		System.out.println("두번째 행의 길이 : " + a1[1].length);
		System.out.println("세번째 행의 길이 : " + a1[2].length);
		
		System.out.println("첫번째 행 : " + Arrays.toString(a1[0]));
		System.out.println("두번째 행 : " + Arrays.toString(a1[1]));
		System.out.println("세번째 행 : " + Arrays.toString(a1[2]));
		
		int[][] a2 = new int[][] { { 1, 2 }, { 3, 4, 5 }, { 6, 7, 8, 9 } };
		System.out.println(Arrays.deepToString(a2));
		
	}
	
}
